<Window x:Class="NewTechn.PartnerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewTechn"
        mc:Ignorable="d"
         FontFamily="Bahnschrift"
        Title="PartnerEditWindow" Height="550" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Партнёр" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,15"
                   Foreground="#0C4882" />

        <TextBlock Text="Тип партнёра:" Grid.Row="1"/>
        <ComboBox x:Name="TypeComboBox" Grid.Row="1" Margin="0,25,0,0" DisplayMemberPath="Название"
                SelectedValuePath="Код_ТипаПартнера"
                SelectedValue="{Binding Код_ТипаПартнера}"/>
        <TextBlock Text="Наименование:" Grid.Row="2" Margin="0,15,0,0"/>
        <TextBox x:Name="NameBox" Grid.Row="2" Margin="0,40,0,0"
                Text="{Binding Наименование}"/>

        <TextBlock Text="ФИО директора:" Grid.Row="3" Margin="0,15,0,0"/>
        <TextBox x:Name="DirectorBox" Grid.Row="3" Margin="0,40,0,0"
                 Text="{Binding Директор}"/>

        <TextBlock Text="Юридический адрес:" Grid.Row="4" Margin="0,15,0,0"/>
        <TextBox x:Name="AddressBox" Grid.Row="4" Margin="0,40,0,0"
                 Text="{Binding ЮридическийАдрес}"/>

        <TextBlock Text="Рейтинг:" Grid.Row="5" Margin="0,15,0,0"/>
        <TextBox x:Name="RatingBox" Grid.Row="5" Margin="0,40,0,0"
                 Text="{Binding Рейтинг}"/>

        <TextBlock Text="Телефон:" Grid.Row="6" Margin="0,15,0,0"/>
        <TextBox x:Name="PhoneBox" Grid.Row="6" Margin="0,40,0,0"
                 Text="{Binding Телефон}"/>

        <TextBlock Text="Email:" Grid.Row="7" Margin="0,15,0,0"/>
        <TextBox x:Name="EmailBox" 
                 Grid.Row="7" 
                 Margin="0,40,0,0"
                 Text="{Binding ЭлектроннаяПочта}"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Width="100" 
                    Background="#0C4882 " Margin="0,0,10,0" Foreground="White"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="100"
                     Background="#0C4882 " Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>

